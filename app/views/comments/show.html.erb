<h1>Comment <%=@comment.id%> for: <%= @post.link %></h1>
<% #ebinding.pry %>
	<h2>Comment: <%=@comment.body%></h2>
			<p> Comment on this comment:</p>

	 <%=form_for [@post, @comment], url: post_comment_path(@post.id, @comment.id), method: :patch do |f| %>
  			<%= f.text_area :body, :rows => 4 %><br>
  				<%= f.submit "Post Comment" %>
   		<% end %>

<%= button_to "See post", post_path(@post.id), method: :get %>
<%= button_to "Home", root_path, method: :get %>
