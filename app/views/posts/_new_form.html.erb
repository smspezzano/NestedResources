<%=form_for comment, url: new_post_comment_path(@post) do |f| %>
		 <%= f.hidden_field(comment, value: comment.id) %>
  			<%= f.fields_for @new_comment, comment.comments do |c| %>
    			<%= c.label :body, "New comment" %>
     			<%= c.text_area :body, :rows => 4 %>
  				<%= c.submit "Post Comment" %>
   			<% end %>
   		<% end %>